<UserControl x:Class="ThiTracNghiem.CauHoi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThiTracNghiem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <StackPanel HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800" Background="#FFB7BF00">
        <TextBlock x:Name="NoiDungText" TextWrapping="Wrap" Text="TextBlock" Height="102"/>
        <RadioButton x:Name="Atext" Content="A" Height="35" Margin="10,0,27,0"/>
        <RadioButton x:Name="Btext" Content="B" Height="33" Margin="10,0,27,0"/>
        <RadioButton x:Name="Ctext" Content="C" Height="33" Margin="10,0,27,0"/>
        <RadioButton x:Name="Dtext" Content="D" Height="33" Margin="10,0,27,0"/>
    </StackPanel>

</UserControl>
